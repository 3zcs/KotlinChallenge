<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="normalButton" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="scoreText" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/scoreTextColor</item>
        <item name="android:textSize">@dimen/score_text_size</item>
    </style>

    <style name="teamNameText" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/nameTextColor</item>
        <item name="android:textSize">@dimen/name_text_size</item>
    </style>

</resources>
